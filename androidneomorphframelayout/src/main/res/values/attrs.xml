<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="NeomorphFrameLayout">
        <attr name="neomorph_view_type" />
        <attr name="neomorph_shadow_type" />
        <attr name="neomorph_style"  />
        <attr name="neomorph_elevation" format="dimension" />
        <attr name="neomorph_padding_top" format="dimension" />
        <attr name="neomorph_padding_bottom" format="dimension" />
        <attr name="neomorph_padding_right" format="dimension" />
        <attr name="neomorph_padding_left" format="dimension" />
        <attr name="neomorph_corner_radius" format="dimension" />
        <attr name="neomorph_background_color" format="color" />
        <attr name="neomorph_selected_padding" format="dimension" />
        <attr name="neomorph_selected_color" format="color" />
        <attr name="neomorph_shadow_color" format="color" />
        <attr name="neomorph_highlight_color" format="color" />
        <attr name="neomorph_layer_type" />
        <attr name="neomorph_shadow_visible" format="boolean" />
        <attr name="neomorph_stroke_width" format="dimension" />

    </declare-styleable>

    <attr name="neomorph_view_type">
        <enum name="rectangular" value="1" />
        <enum name="circular" value="2" />
    </attr>

    <attr name="neomorph_shadow_type">
        <enum name="outer" value="1" />
        <enum name="inner" value="2" />
    </attr>

    <attr name="neomorph_style">
        <enum name="stroke" value="1" />
        <enum name="fill" value="2" />
    </attr>

    <attr name="neomorph_layer_type">
        <enum name="software" value="1" />
        <enum name="hardware" value="2" />
    </attr>

</resources>